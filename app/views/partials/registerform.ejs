<div id="accordion" class="registerContent">
  <div class="card">
    <div class="card-header" id="StudentCard">
      <h5 class="mb-0">
        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseStudent" aria-expanded="true" aria-controls="collapseStudent">
          <i class="fas fa-user"></i>
          Student Register
        </button>
      </h5>
    </div>

    <div id="collapseStudent" class="collapse show" aria-labelledby="StudentCard" data-parent="#accordion">
      <div class="card-body">
        <div class="alert alert-warning alert-dismissible fade show" role="alert" id="FieldError" style="display: none">
          <strong>No Anakin!</strong> You should check in on some of those fields below.
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form class="form-register" method="post">
          <h1 class="h3 mb-3 font-weight-normal">Student Register</h1>
          <!--           <button class="btn btn-block btn-social btn-facebook" href="/login/facebook?">
  <i class="fab fa-facebook"></i>
  Sign in with Facebook
</button> -->

<!--           <button class="btn btn-block btn-social btn-google" href="/login/google?">
  <i class="fab fa-google"></i>
  Sign in with Google
</button> -->
          <hr>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="email-addon"><i class="fas fa-envelope"></i></span>
            </div>
            <input id="student-email" name="email" type="text" class="form-control" placeholder="example@example.co.uk" aria-label="Email" aria-describedby="email-addon" required autofocus>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="password-addon"><i class="fas fa-unlock-alt"></i></span>
            </div>
            <input id="student-password" name="password" type="password" class="form-control" placeholder="***Create a Password***" aria-label="Password" aria-describedby="password-addon">
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="password-addon"><i class="fas fa-unlock-alt"></i></span>
            </div>
            <input id="student-password-confirm" name="password" type="password" class="form-control" placeholder="***Confirm Password***" aria-label="Password" aria-describedby="password-addon">
          </div>
          <small id="studentHelpBlock" class="form-text text-muted">
              Please Sign up with your Email and Create a Password.
          </small>
          <button class="btn btn-lg btn-primary btn-block" type="button" id="StudentRegister">Register</button>
        </form>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="CompanyCard">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseCompany" aria-expanded="false" aria-controls="collapseCompany">
          <i class="fas fa-building"></i>
          Company Register
        </button>
      </h5>
    </div>
    <div id="collapseCompany" class="collapse" aria-labelledby="CompanyCard" data-parent="#accordion">
      <div class="card-body">
        <form class="form-register">
          <h1 class="h3 mb-3 font-weight-normal">Company Register</h1>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="email-addon"><i class="fas fa-user"></i></span>
            </div>
            <input id="company-name" type="text" class="form-control" placeholder="PlaceMate Corporation" aria-label="Email" aria-describedby="email-addon" required autofocus>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="password-addon"><i class="fas fa-unlock-alt"></i></span>
            </div>
            <input id="company-password" type="password" class="form-control" placeholder="********" aria-label="Password" aria-describedby="password-addon">
          </div>
          <small id="companyHelpBlock" class="form-text text-muted">
              Please email a request to become a PlaceMate Company Partner then Register with the provided Credentials.
          </small>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
        </form>
      </div>
    </div>
  </div>
</div>
