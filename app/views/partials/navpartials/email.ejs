<!-- Email form that will load to allow the user to change their email address !-->
<!-- Define our inital columns using bootstrap and give it a border!-->
<div class="col-sm-12 border">
  <!-- Form that holds the email change label!-->
  <form class="form-inline justify-content-center">
    <div class="input-group mb-3">
      <label>Email Change<label>
    </div>
  </form>
  <form class="form-inline justify-content-center">
    <!-- Form that will hold our addon and our text input box!-->
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">E</span>
      </div>
      <input type="text" class="form-control" placeholder="Previous Address" aria-label="Previous Address" aria-describedby="basic-addon1">
    </div>
  </form>
    <form class="form-inline justify-content-center">
      <!-- Form that will hold our addon and our text input box!-->
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">*</span>
        </div>
        <input type="text" class="form-control" placeholder="New Email" aria-label="New Email" aria-describedby="basic-addon1">
      </div>
    </form>
    <!-- Form that will hold our change button-->
    <form class="form-inline justify-content-center">
      <div class="input-group mb-3">
        <button type="button" class="btn btn-dark" id="ChangeEmail">Change</button>
      </div>
    </form>
  </div>
