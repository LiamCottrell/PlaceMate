<!-- This will hold all of our nav items and the content assosiated with them!-->
<div class="container col-lg-8 col-md-10 col-sm-12 justify-content-center">
  <nav>
    <!-- Generate a navtabs class-->
    <div class="nav nav-tabs justify-content-center " id="nav-tab" role="tablist">
      <!-- each nav item will contain the text to appear to the user then an assosiated reference to the content-->
      <a class="nav-item nav-link active" id="nav-email-tab" data-toggle="tab" href="#nav-email" role="tab" aria-controls="nav-email" aria-selected="true">
        Change Email
      </a>
      <a class="nav-item nav-link" id="nav-password-tab" data-toggle="tab" href="#nav-password" role="tab" aria-controls="nav-password" aria-selected="false">
        Change Password
      </a>
      <a class="nav-item nav-link" id="nav-name-tab" data-toggle="tab" href="#nav-name" role="tab" aria-controls="nav-name" aria-selected="false">
        Change Name
      </a>
      <a class="nav-item nav-link" id="nav-delete-tab" data-toggle="tab" href="#nav-delete" role="tab" aria-controls="nav-delete" aria-selected="false">
        Delete Account
      </a>
    </div>
    <div class="row tab-content justify-content-center" id="nav-tabContent">
      <!-- This will hold the actual content for each tab, it will link to a partial!-->
      <div class="tab-pane fade show active navbarcontent" id="nav-email" role="tabpanel" aria-labelledby="nav-email-tab " style="height: 50vw;">
        <% include ../partials/navpartials/email %>
      </div>
      <div class="tab-pane fade navbarcontent" id="nav-password" role="tabpanel" aria-labelledby="nav-password-tab">
        <% include ../partials/navpartials/password %>
      </div>
      <div class="tab-pane fade navbarcontent" id="nav-name" role="tabpanel" aria-labelledby="nav-name-tab">
        <% include ../partials/navpartials/name %>
      </div>
      <div class="tab-pane fade navbarcontent" id="nav-delete" role="tabpanel" aria-labelledby="nav-delete-tab">
        <% include ../partials/navpartials/delete %>
      </div>
    </div>
  </nav>
</div>
</div>
